# Обязательные настройки
BOT_TOKEN=your_telegram_bot_token_here

# Авторизация (ОБЯЗАТЕЛЬНО!)
BOT_OWNER_ID=123456789
BOT_ADMIN_IDS=987654321,111222333

# Настройки базы данных
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password@postgres:5432/telegram_bot
# Для SQLite: DATABASE_URL=sqlite+aiosqlite:///bot.db
# Для MySQL: DATABASE_URL=mysql+aiomysql://user:password@localhost/telegram_bot

# Пароль PostgreSQL (для Docker)
DB_PASSWORD=your_secure_password_here

# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Настройки пула соединений БД
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_ECHO=false

# Настройки модерации
DEFAULT_WARNINGS_LIMIT=3
ENABLE_AUTO_BAN=true

# Настройки производительности
CACHE_TTL=3600
PATTERNS_CACHE_SIZE=1000
MAX_WORKERS=4

# Окружение (development/production)
ENVIRONMENT=development
DEBUG=false
